.d-l
  cursor zoom-in

.dl-container
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(255,255,255,0.95)
  z-index 1000
  display flex
  justify-content center
  align-items center
  
  .dl-button-left
    left 10px

  .dl-button-right
    right 10px

  .dl-button:hover
    color #aaa

  .dl-button
    position absolute
    top 50%
    font-size 72px
    color #ddd
    cursor pointer
    transition 0.3s color

  figure
    display flex
    max-width 90%
    max-height 90%
    animation 1.5s light-box-appear cubic-bezier(0,.96,.44,.98)

    img, iframe, video
      max-width 100%
      max-height 100%
      width auto
      height auto
      object-fit contain
      margin-left auto
      margin-right auto

@keyframes light-box-appear
  0%
    transform scale(0.95)
  100%
    transform scale(1)
